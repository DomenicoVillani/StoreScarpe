@section Title {
    Lista prodotti
}

<div class="row">
    @if (Model.Count == 0)
    {
        <h1>Non ci sono prodotti</h1>
    }
    else
    {
        @foreach (var articolo in Model)
        {
            <div class="col">
                <div class="card">
                    <img src=@articolo.ImgCover class="card-img-top" alt=@articolo.Name>
                    <div class="card-body">
                        <h5 class="card-title">@articolo.Name</h5>
                        <p class="card-text">@articolo.Description</p>
                        <p class="card-text">@articolo.Prezzo  €</p>
                        <div class="d-flex justify-content-between">
                            <form asp-action="SoftDelete" method="post">
                                <input type="hidden" name="ArticoloId" value="@articolo.Id"/>
                                <button type="submit" class="btn btn-danger">🗑️</button>
                            </form>
                            <a class="btn btn-primary" asp-area="" asp-controller="Articolo" asp-action="Dettagli" asp-route-id="@articolo.Id">Dettagli</a>
                            <a class="btn btn-primary" asp-area="" asp-controller="Articolo" asp-action="Edit" asp-route-id="@articolo.Id">Modifica</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

